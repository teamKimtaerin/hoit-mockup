# ===== FastAPI 설정 =====
# 애플리케이션 이름
APP_NAME=Expressive Caption Generator
# 디버그 모드 (개발: True, 운영: False)
DEBUG=False
# 비밀 키 (운영 환경에서는 반드시 변경 필요!)
SECRET_KEY=change-this-in-production

# ===== 개발환경 설정 =====
# Docker 모드 (dev: 개발, prod: 운영)
MODE=dev
# 백엔드 포트 번호
BACKEND_PORT=8000

# ===== CORS 설정 =====
# 허용할 프론트엔드 URL (쉼표로 구분)
CORS_ORIGINS=http://localhost:3000,https://d31nzc58rhgh3i.cloudfront.net

# ===== 데이터베이스 설정 (로컬 PostgreSQL) =====
# Docker Compose로 실행되는 로컬 PostgreSQL 연결 정보
DATABASE_URL=postgresql://ecg_user:ecg_password@localhost:5432/ecg_db
# PostgreSQL 사용자명
DB_USER=ecg_user
# PostgreSQL 비밀번호 (운영 환경에서는 강력한 비밀번호 사용)
DB_PASSWORD=ecg_password
# 데이터베이스 이름
DB_NAME=ecg_db
# PostgreSQL 포트 번호
DB_PORT=5432

# ===== 운영 환경용 AWS RDS 설정 =====
# 운영 배포 시 아래 주석을 해제하고 RDS 정보 입력
# DATABASE_URL=postgresql://username:password@your-rds-endpoint.amazonaws.com:5432/dbname

# ===== AWS S3 설정 =====
# AWS 액세스 키 ID (IAM 사용자의 액세스 키)
AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS 시크릿 액세스 키 (IAM 사용자의 시크릿 키)
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS 리전 (예: us-east-1, ap-northeast-2)
AWS_REGION=us-east-1
# S3 버킷 이름 (비디오 파일 저장용)
S3_BUCKET_NAME=your-s3-bucket-name
# S3 사전 서명된 URL 만료 시간 (초 단위, 기본: 3600초 = 1시간)
S3_PRESIGNED_URL_EXPIRE=3600

# ===== AWS Bedrock 설정 (ChatBot 기능용) =====
# AWS Bedrock 리전 (Claude 모델을 사용하는 리전)
AWS_BEDROCK_REGION=us-east-1
# AWS Bedrock 액세스 키 ID (ChatBot 전용 IAM 사용자 권장)
AWS_BEDROCK_ACCESS_KEY_ID=your-bedrock-access-key
# AWS Bedrock 시크릿 액세스 키 (ChatBot 전용 IAM 사용자 권장)
AWS_BEDROCK_SECRET_ACCESS_KEY=your-bedrock-secret-key


# ===== 모델 서버 설정 =====
# AI 모델 서버 URL (감정 분석 등 처리)
MODEL_SERVER_URL=http://your-model-server-url
# ML API 타임아웃 (초 단위, 기본: 300초 = 5분)
ML_API_TIMEOUT=300
# FastAPI 백엔드 서버 URL (ML 서버 콜백용)
FASTAPI_BASE_URL=http://localhost:8000

# ===== GPU 렌더링 서버 설정 =====
# GPU 렌더링 서버 URL (로컬 테스트용)
GPU_RENDER_SERVER_URL=http://localhost:8090
# GPU 렌더링 타임아웃 (초 단위, 기본: 1800초 = 30분)
GPU_RENDER_TIMEOUT=1800
# 렌더링 결과 콜백 URL (GPU 서버가 결과를 전송할 주소)
RENDER_CALLBACK_URL=http://localhost:8000

# ===== 프론트엔드 에디터 설정 =====
# 프론트엔드 에디터 URL (Playwright가 접속할 주소)
FRONTEND_EDITOR_URL=http://localhost:3000

# ===== Phase 2 스트리밍 파이프라인 설정 =====
# Phase 2 모니터링 활성화 (true/false)
ENABLE_PHASE2_MONITORING=true
# 프레임 드롭 경고 임계값 (0.05 = 5%)
FRAME_DROP_ALERT_THRESHOLD=0.05
# 메모리 사용량 경고 임계값 (MB 단위)
MEMORY_ALERT_THRESHOLD_MB=3000
# Redis 진행률 캐시 TTL (초 단위)
REDIS_PROGRESS_TTL=60
# Redis 메트릭 캐시 TTL (초 단위)
REDIS_METRICS_TTL=300

# ===== API 설정 =====
# API 경로 접두사
API_PREFIX=/api/v1

# ===== JWT 인증 설정 =====
# JWT 시크릿 키
JWT_SECRET_KEY=your-secret-key-change-in-production
# JWT 토큰 만료 시간 (분 단위, 기본: 1440분 = 24시간)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

API_PREFIX=/api/v1
